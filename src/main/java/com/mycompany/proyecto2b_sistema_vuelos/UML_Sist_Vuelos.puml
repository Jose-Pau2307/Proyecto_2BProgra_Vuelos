skinparam classAttributeIconSize 0

package "modelo" {

class Vuelo {
    - id : String
    - origen : String
    - destino : String
    - precio : double
}

class Asiento {
    - numero : int
    - tipo : TipoAsiento
    - disponible : boolean
}

enum TipoAsiento {
    ECONOMICA
    MEDIA
    PREMIUM
}

class Pasajero {
    - nombre : String
    - apellido : String
    - cedula : String
    - celular : String
}

class CarritoReserva {
    - vuelosSeleccionados : List<Vuelo>
    - asientosSeleccionados : List<Asiento>
    - pasajeros : List<Pasajero>
    - total : double
    - totalPasajeros : int

    + agregarVuelo(v : Vuelo)
    + agregarAsiento(a : Asiento)
    + agregarPasajero(p : Pasajero)
    + getTotal() : double
}

Vuelo "1" -- "*" Asiento
CarritoReserva "1" o-- "*" Vuelo
CarritoReserva "1" o-- "*" Asiento
CarritoReserva "1" o-- "*" Pasajero
}

package "dao" {

class VueloDAO {
    + listarVuelos() : List<Vuelo>
}

class AsientoDAO {
    + listarAsientos() : List<Asiento>
}
}

package "controlador" {

class ControladorVuelos {
    + buscarVuelos()
    + seleccionarVuelo()
    + confirmarReserva()
}
}

package "vista" {

class frmPrincipal
class frmLogin
class frmSeleccionVuelos
class frmSeleccionAsientosIda
class frmSeleccionAsientosVuelta
class frmDatosPasajero
class frmPago
class SeleccionAsientosDialog
}

ControladorVuelos --> VueloDAO
ControladorVuelos --> AsientoDAO
ControladorVuelos --> CarritoReserva

frmPrincipal --> ControladorVuelos
frmSeleccionVuelos --> ControladorVuelos
frmSeleccionAsientosIda --> ControladorVuelos
frmSeleccionAsientosVuelta --> ControladorVuelos
frmDatosPasajero --> ControladorVuelos
frmPago --> ControladorVuelos

@enduml
